  "devDependencies": {
    "@types/jest": "^26.0.15",
    "jest": "^26.6.3",
    "jest-canvas-mock": "^2.3.0",
    "lerna": "^3.22.1",
    "parcel-bundler": "^1.3.1",
    "ts-jest": "^26.4.4",
    "typescript": "^4.0.5"
